{
    "manifest_version": 3,
    "name": "Media Literacy",
    "description": "Helps users break down media for easier understanding of media literacy.",
    "version": "1.0",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/reading.png"
    },
    "background": {
      "service_worker": "dist/bundle.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }